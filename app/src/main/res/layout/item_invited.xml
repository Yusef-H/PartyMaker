<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#98d7efff"
    android:fitsSystemWindows="true">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgILprofile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_profile" />
    <TextView
        android:id="@+id/tvILusername"
        android:layout_width="250dp"
        android:textSize="25sp"
        android:layout_height="32dp"
        android:text="@string/username"
        android:textColor="#004f56"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvILemail" />

    <TextView
        android:id="@+id/tvILemail"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvILusername"
        android:layout_marginLeft="10dp"
        android:textColor="#039694"
        android:layout_toEndOf="@+id/imgILprofile"
        android:text="@string/email" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_toEndOf="@+id/tvILusername"
        android:contentDescription="TODO"
        app:srcCompat="@drawable/ic_party_admin"
        android:visibility="invisible"/>

</RelativeLayout>